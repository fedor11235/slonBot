// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-py"
  recursive_type_depth = 5
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  tg_id          BigInt    @unique
  state          String    @default("ЗАПУСТИЛ БОТА")
  tariff_plan    String    @default("base")
  channels       Channel[]
  opt_edit       Int?
  into_opt_edit  Int?
}

model Channel {
  id           Int     @id @default(autoincrement())
  channel_id   BigInt  @unique
  admin        User    @relation(fields: [admin_id], references: [tg_id])
  admin_id     BigInt
  category     String?
  username     String?
  title        String?
  opt          Opt?
  into_opt     IntoOpt?
}

model Opt {
  id              Int     @id @default(autoincrement())
  channel         Channel @relation(fields: [channel_id], references: [channel_id])
  channel_id      BigInt  @unique
  retail_price    String?
  wholesale_price String?
  min_seats       String?
  max_seats       String?
  date            String?
  time            String?
  date_deadline   String?
  details         String?
}

model IntoOpt {
  id              Int     @id @default(autoincrement())
  channel         Channel @relation(fields: [channel_id], references: [channel_id])
  channel_id      BigInt  @unique
  date            String?
  time            String?
  posts           Post[]
}

model Suggestions {
  id              Int     @id @default(autoincrement())
  // channel         Channel @relation(fields: [channel_id], references: [channel_id])
  // channel_id      BigInt  @unique
  retail_price    String?
  wholesale_price String?
  min_seats       String?
  max_seats       String?
  date            String?
  time            String?
  date_deadline   String?
  details         String?
  username        String?
}

model Post {
  id              Int     @id @default(autoincrement())
  img_id          String?
  video_id        String?
  animation_id    String?
  text            String?
  caption         String?
  media_group_id  String?
  into_opt        IntoOpt @relation(fields: [into_opt_id], references: [id])
  into_opt_id     Int
}

model Admin {
  id              Int     @id @default(autoincrement())
  username         String  @default("admin")
  password        String  @default("admin")
} 



